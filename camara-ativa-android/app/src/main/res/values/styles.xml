<resources>

    <!-- Base application theme. -->
    <!-- the theme applied to the application or activity -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#e95a22</item>
    </style>

    <style name="screensBackground">
        <item name="android:background">#c0deff</item>
    </style>

    <style name="DialogWithScrollStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">#c0deff</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:minWidth">300dp</item>
    </style>

    <!-- Padroes para titulos de telas -->
    <style name="LineTituloStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#e95a22</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ScreenTituloStyle">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">7</item>
    </style>

    <!-- Padroes para scroll de telas -->
    <style name="ScrollViewTelasInternas">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">7</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Padrao para layout de listagem de telas -->
    <style name="LinearLayoutSolicitacoesStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Padrao para linhas de titulo de telas -->
    <style name="LinearLayoutSolicitacaoStyle">
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ItensListagemSolicitacaoScreen">
        <item name="android:padding">5dip</item>
    </style>

    <style name="LinearLayoutImagemSolicitacaoStyle" parent="ItensListagemSolicitacaoScreen">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ItensListagemVereadoresScreen">
        <item name="android:padding">5dip</item>
    </style>

    <style name="LinearLayoutImagemVereadoresStyle" parent="ItensListagemVereadoresScreen">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
    </style>

    <style name="ImageViewSolicitacaoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutTituloSolicitacaoStyle" parent="ItensListagemSolicitacaoScreen">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">6</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewTituloSolicitacaoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#024da1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextViewDescricaoSolicitacaoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenStyle">
        <item name="android:baselineAligned">false</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">10dip</item>
        <item name="android:layout_marginRight">10dip</item>
        <item name="android:layout_marginTop">5dip</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayoutTituloSolicitacaoScreenStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="TituloSolicitacaoScreenStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#024da1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dip</item>
    </style>

    <style name="LabelSolicitacaoScreen" parent="TituloSolicitacaoScreenStyle">
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenLineFotoEndereco">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">5dip</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenFotoIcone">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenEnderecoTexto">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">3</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>

    <style name="EditTextSolicitacaoScreenEnderecoTexto">
        <item name="android:hint">Digite o endereço ou clique no botão abaixo para localizar.</item>
        <item name="android:gravity">top|left</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">8dip</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/edittext_style</item>
    </style>

    <style name="BtnLocalizarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_localizar_endereco</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenDescricaoTexto">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">3</item>
    </style>

    <style name="EditTextSolicitacaoScreenDescricaoTexto">
        <item name="android:hint">Descreva demais informações.</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:lines">8</item>
        <item name="android:minLines">6</item>
        <item name="android:gravity">top|left</item>
        <item name="android:maxLines">10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:padding">8dip</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/edittext_style</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenLblVereadores">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">5dip</item>
    </style>

    <style name="LinearLayoutSolicitacaoScreenSpnVereadores">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dip</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/spinner_dropdown_style</item>
        <item name="android:layout_marginBottom">10dip</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:padding">10dip</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">20dip</item>
    </style>

</resources>
